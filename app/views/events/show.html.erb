<%= render "navbar" %>

<div class="container mt-3 p-3">
  <h1><%= @event.name %></h1>
  <br>
  <h4>Description of the event:</h4>
  <p><%= @event.description %></p>
  <h4>When?</h4>
  <p><%= @event.date.strftime("%e %B %Y at %H:%M") %></p>
  <br>
  <% attend_flag = true %>
  <% current_user.booked_event.each do |booked| %>
    <% if booked.name == @event.name %>
      <% attend_flag = false %>
    <% end %>
  <% end %>
  <% if attend_flag %>
    <%= link_to "Attend this event", attend_path(event_id: @event.id), class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Attend this event", attend_path(event_id: @event.id), class: "btn btn-primary disabled" %>
  <% end %>
  <br>
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th>#</th>
        <th>Atendee</th>
      </tr>
    </thead>
    <tbody>
      <% if @event.user_booking.present? %>
        <% counter = 1 %>
        <% @event.user_booking.each do |atendee| %>
          <tr>
            <td><%= counter %></td>
            <td><%= atendee.email %></td>
          </tr>
          <% counter += 1 %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2" class="text-center">There's no atendee</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
