<%= render "navbar" %>

<div class="container mt-3">
  <div>
    <h1>Your ticket for event: <%= @event.name %></h1>
  </div>
  <div class="mt-3">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title"><%= current_user.username %>'s Ticket</h4>
      </div>
      <div class="card-body d-flex">
        <div class="w-75">
          <table class="table align-middle">
            <tbody>
              <tr>
                <td>
                  <h5>Event's name</h5>
                </td>
                <td>
                  <%= @event.name %>
                </td>
              </tr>
              <tr>
                <td>
                  <h5>Date & time</h5>
                </td>
                <td><%= @event.date.strftime("%e %B %Y at %H:%M") %></td>
              </tr>
              <tr>
                <td>
                  <h5>Category</h5>
                </td>
                <td>
                  ~ Kategori ~
                </td>
              </tr>
              <tr>
                <td>
                  <h5>Event starter</h5>
                </td>
                <td><%= @event.user.username %></td>
              </tr>
              <tr>
                <td>
                  <h5>Ticket count</h5>
                </td>
                <td>
                  1 ticket(s)
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="p-3 w-25 d-flex justify-content-center">
          <%= @qr_svg.html_safe %>
        </div>
      </div>
      <div class="card-footer">
        <p>Please bring the hardcopy of this ticket or show this ticket while attending the event. Thanks!</p>
      </div>
    </div>
  </div>
</div>
